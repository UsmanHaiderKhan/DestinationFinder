<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context=".signup">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/gradient_sign"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/dest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="DESTINATION"
            android:textAlignment="center"
            android:textColor="#1c1c1c"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/find_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing=".4"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="FINDER"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="14dp"
            android:hint="Username *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="text"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/username"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="14dp"
            android:hint="Email *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="text"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="14dp"
            android:hint="Password *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="numberPassword"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/con_password"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="14dp"
            android:hint="Confirm Password *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="numberPassword"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/con_password"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="14dp"
            android:hint="Phone *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="phone"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/flag"
            android:drawablePadding="14dp"
            android:hint="Country *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:inputType="text"
            android:textSize="18dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/country"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient_btn_sign"
            android:elevation="20dp"
            android:paddingLeft="40dp"
            android:text="@string/register"
            android:textColor="#fff" />
    </RelativeLayout>


</LinearLayout>