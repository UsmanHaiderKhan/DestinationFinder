<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Load the toolbar here -->
    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Rest of content for the activity -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/gl" />

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_img"
            android:layout_marginTop="20dp"
            android:text="Gallen  MaxWell"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorSignOne"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="28dp" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile_text"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="12dp"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="13dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_username"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="12dp"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="13dp" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_email"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="12dp"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingLeft="13dp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_pass"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="12dp"
            android:hint="Phone No"
            android:inputType="phone"
            android:paddingLeft="13dp" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_phone"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_flag_black_24dp"
            android:hint="Country"
            android:inputType="text"
            android:paddingLeft="13dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@+id/edt_address"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient_btn_sign"
            android:elevation="20dp"
            android:text="@string/update"
            android:textColor="#fff" />

    </RelativeLayout>


</LinearLayout>