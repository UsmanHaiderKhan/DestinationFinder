<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:weightSum="1"
    tools:context=".signup">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/gradient_sign"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/dest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="DESTINATION"
            android:textAlignment="center"
            android:textColor="#1c1c1c"
            android:textSize="20dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="14dp"
            android:hint="Email *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/email"
            android:layout_toRightOf="@+id/email"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="14dp"
            android:hint="Password *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="21dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="14dp"
            android:hint="Phone *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/country"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_below="@+id/phone"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="-57dp"
            android:layout_toEndOf="@+id/phone"
            android:layout_toRightOf="@+id/phone"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/flag"
            android:drawablePadding="14dp"
            android:hint="Country *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/con_password"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_below="@+id/country"

            android:layout_marginTop="15dp"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="14dp"
            android:hint="Confirm Password *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_below="@+id/country"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/con_password"
            android:background="@drawable/border_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="14dp"
            android:hint="UserName *"
            android:paddingLeft="13dp"
            android:shadowColor="#ebebeb"
            android:textColorHint="#1c1c1c "
            android:textSize="18dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/registers"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_btn_sign"
        android:elevation="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/register"
        android:textColor="#fff" />
</LinearLayout>